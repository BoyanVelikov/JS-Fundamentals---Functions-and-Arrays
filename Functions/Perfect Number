function perfectNumber(input) {
    let result = 0;
    for (i = 1; i < input; i++) {
        let x = input % i;
        if (x == 0) {
            result += i;
        }
    }
    if (result == input) {
        console.log('We have a perfect number!');
    } else {
        console.log("It's not so perfect.");
    }
}
