function addOrSubstract(input) {
    let sum = 0;
    let newSum = 0;
    for (i = 0; i <= input.length - 1; i++) {
        sum += input[i];
        if (input[i] % 2 === 0) {
            input[i] = input[i] + i;
        } else if (input[i] % 2 !== 0) {
            input[i] = input[i] - i;
        }
        newSum += input[i];
    }
    console.log(input);
    console.log(sum);
    console.log(newSum);
}
